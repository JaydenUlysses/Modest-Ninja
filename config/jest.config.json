{
  "moduleFileExtensions": ["ts", "tsx", "js"],
  "testEnvironment": "node",
  "preset": "ts-jest",
  "verbose": true,
  "rootDir": "../src",
  "collectCoverage": true,
  "coveragePathIgnorePatterns": ["<rootDir>/node_modules/", "<rootDir>/src/classes"],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": -50
    }
  }
}
