{
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js"
  ],
  "testEnvironment": "node",
  "preset": "ts-jest",
  "verbose": true,
  "rootDir": "../src",
  "collectCoverage": true,
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 50
    }
  }
}
